<h1><%= @cocktail.name %></h1>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<h2>Ingredients:</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Delete", delete_path(dose), method: :delete %> </li>
  <% end %>
</ul>

<%= link_to "+ Add a dose!", cocktail_doses_path(@cocktail), class:"btn btn-dark rounded" %>
<br>
<%= link_to "Back to cocktails", cocktails_path, class:"btn btn-dark rounded" %>
