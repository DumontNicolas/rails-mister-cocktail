<h1>Cocktails</h1>

  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @article.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail), class:"btn btn-dark rounded"%>
      </div>
    <% else %>
      <div class="card"><%= link_to cocktail.name, cocktail_path(cocktail), class:"btn btn-dark rounded"%></div>
    <% end %>
  <% end %>

<%= link_to "+ Add your own cocktail", cocktails_new_path, class:"btn btn-dark rounded" %>
